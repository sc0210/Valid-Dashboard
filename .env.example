# Test Dashboard Environment Configuration
# Copy this file to .env and update with your actual values

# Flask Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3000
DEBUG_MODE=True

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
# Get your bot token from @BotFather on Telegram

# Dashboard URL (for bot to query test status and notification links)
DASHBOARD_URL=http://localhost:3000

# Notification Settings
# Options: telegram, webhook, both
NOTIFICATION_METHOD=telegram
# If using webhook, specify the receiver URL (for offline/local networks)
WEBHOOK_URL=http://localhost:8080/notifications
WEBHOOK_TIMEOUT=5

# Optional: Pre-register users (format: username:chat_id,username2:chat_id2)
# Users can also register via /register command
# TELEGRAM_CHAT_IDS=Alice:123456789,Bob:987654321

# Data Storage
DATA_FILE=test_slots.json
LOG_DIRECTORY=logs

# Number of test slots
NUM_SLOTS=16
